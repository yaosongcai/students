<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef3fa"
    android:orientation="vertical">

    <View
        android:id="@+id/view_status"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="#0078ff"/>

    <com.wq.utils.view.widget.CustomTitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_right_button="false"
        app:show_left_button="false"
        app:title_background="#0078ff"
        app:title_textColor="#fff"
        app:title_text="@string/My_messages">

    </com.wq.utils.view.widget.CustomTitleBar>

    <LinearLayout
        android:id="@+id/ll_personal_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0078ff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.wq.utils.view.widget.RoundImageView
            android:id="@+id/riv_icon"
            android:layout_width="120px"
            android:layout_height="120px"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/loginbg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#fff"/>

            </RelativeLayout>

